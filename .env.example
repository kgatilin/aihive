# Application environment
APP_ENV=development

# API configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False

# Message broker
RABBITMQ_CONNECTION_URI=amqp://guest:guest@localhost:5672/
MESSAGE_BROKER_TYPE=rabbitmq

# Database
MONGODB_CONNECTION_URI=mongodb://localhost:27017/
DB_TYPE=mongodb

# Product definition
PRODUCT_REQUIREMENT_STORAGE_TYPE=mongodb
# Use 'mongodb' or 'file'
PRODUCT_REQUIREMENT_FILE_STORAGE_DIR=data/product_requirements

# Task scanning
TASK_SCANNING_INTERVAL=300
TASK_SCANNING_BATCH_SIZE=100

# Agent configuration
AGENT_POLLING_INTERVAL=30
AGENT_MAX_CONCURRENT_TASKS=5

# AI configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
DEFAULT_AI_MODEL=gpt-4-turbo-preview

# Logging
LOG_LEVEL=INFO
